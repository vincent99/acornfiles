args: {
  // Absolute URL to redirect to
  target: "https://acorn.io"

  // Set to true to return permanent redirect (301) instead of temporary (302)
  permanent: false

  // Number of NGINX instances to run
  replicas: 1
}

containers: default: {
  image:  "nginx"
  scale:  args.replicas
  ports: publish: "80/http"

  dirs: {
    "/etc/nginx/conf.d": "secret://nginx-server-blocks"
  }
}

secrets: {
  "nginx-server-blocks": {
    type: "opaque"
    data: {
      "default.conf": """
        server {
            listen     80;
            listen  [::]:80;
            server_name  localhost;

            location / {
              root   /usr/share/nginx/html;
              index  index.html index.htm;

              rewrite ^ "\(args.target)"  \(std.ifelse(args.permanent, "permanent", ""));
            }

            # redirect server error pages to the static page /50x.html
            #
            error_page   500 502 503 504  /50x.html;
            location = /50x.html {
              root   /usr/share/nginx/html;
            }
        }
        """
    }
  }
}
